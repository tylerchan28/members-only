extends layout 

block content 
  div.login-container
    h1= title 

    form.login-form(method="POST" action='')
      div.login-form-container
        label(for='first_name') First Name:
        input#first_name.login-input(type='text' name='first_name' required='true')
        label(for='family_name') Last Name:
        input#last_name.login-input(type='text' name='last_name' required='true')
        label(for="username") Username: 
        input#username.login-input(type="text" name="username", required="true")
        label(for="password") Password: 
        input#password.login-input(type="password" name="password", required="true")
        label(for="confirm-password") Confirm Password: 
        input#confirm-password.login-input(type="password" name="confirm-password", required="true")
      button.submit-btn(type='submit') Sign up
      
    if errors 
      ul 
        for error in errors 
          li!= error.msg